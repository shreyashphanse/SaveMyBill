{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",

    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": false,
    "skipLibCheck": true,

    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
